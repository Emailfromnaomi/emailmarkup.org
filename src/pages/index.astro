---
import HeadCommon from '@components/HeadCommon';
import HeadSEO from '@components/HeadSEO';
import Header from '@components/Header/Header';
import Footer from '@components/Footer/Footer';
import Body from '@components/Body';
import FeaturedArticle from '@components/FeaturedArticle';

import SponsorsGrid from '@components/Sponsors/SponsorsGrid';
import Sponsor from '@components/Sponsors/Sponsor';
import sponsors from '../sponsors.json';

import '../styles/theme.css';
import '../styles/index.css';

const { content = {} } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentPage = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <HeadCommon />
  <HeadSEO {content} {canonicalURL} />

  <style>
    .container {
      padding-block: clamp(2rem, 7vw, 3rem);
      padding-inline: 2rem;
      max-width: 90ch;
      margin: 0 auto;
    }
    
  .hero-tagline {
    font-weight: 700;
    line-height: 1.5;
    font-size: clamp(1.8rem, 3.6vw, 2rem);
  }
  .hero-caption {
    line-height: 1.5;
    font-size: clamp(1.2rem, 3.6vw, 1.4rem);
  }

  .heading-medium {
    font-size: 1.5rem;
  } 

  .heading-supporters {
    font-size: 1.4rem;
    font-size: clamp(1.1rem, 3vw, 1.4rem);
    background-color: #fff;
    color: var(--theme-brand-primary);
    display: inline-block;
    border-radius: 5em;
    padding: .5em .8em;
  }
  </style>
</head>
<Body>
  <Header {currentPage} />

  
  <main>
    <section style="background-color:#E9EAF7; padding:4rem 0;">
      <div class="container">
        <h1 class="hero-tagline txt-brand" style="margin:0;">
          Email Markup Consortium
        </h1>
        <p class="hero-caption txt-brand">
          A comunity group working to improve the user experience, accessibility, performance, consistency, and reliability of email markup
        </p>

        <p class="txt-brand">
          Senders, recipients, and email clients share common goals. We collaborate with relevant parties to work towards these goals and establish a better path for HTML email. Read <a href="/en/docs/mission" class="txt-bold">our misson</a>.
        </p>

        <br>
        <p class="txt-brand">
          <strong>Looking to help us?</strong> There are different ways for individuals and companies. Read our <a href="/en/how-to-help" class="txt-bold">Contribution Guide</a>.
        </p>
      </div>
    </section>

    <section>
      <div class="container">
        <h2 class="heading-medium">
          Featured Reads
        </h2>
        <FeaturedArticle 
          title="Accessibility Report July 2022" 
          desc="Read our first report on the state of the accessibility of HTML emails and learn how 99.9% out of 35,604 HTML emails tested contain issues categorized as “Serious” or “Critical”."
          link="/en/reports/accessibility/2022-07/"
        />

        <FeaturedArticle 
          title="Data Collection" 
          desc="Learn why we are collecting a diversified set of emails and what we are doing with this unique data."
          link="https://dev.to/emailmarkup/collecting-data-1gdb"
        />

        <FeaturedArticle 
          title="Compliant Standards" 
          desc="A document that lays out the standards of what that markup should look like. This document is aimed at top level ideas of what the email markup should do, not specific ways to code."
          link="/en/docs/compliant-standards/"
        />
      </div>
    </section>

    <section class="bg-brand">
      <div class="container">

        <h2 class="heading-supporters">
          ❤️ Made Possible By Many
        </h2>

        <p style="color:#fff;">
          The Email Markup Consortium is an independent not-for-profit community group. Our Sponsors and Partners ensure we can continue working towards our goals.
          And the hard work of many individuals moves us forward.
        </p>

        <h3 style="color:#fff;">Sponsors</h3>
        <SponsorsGrid>
          {sponsors
            .filter(item => item.sponsor)
            .map(item => <Sponsor sponsor={item} />)
          }
        </SponsorsGrid>

        <h3 style="color:#fff;">Partners</h3>
        <SponsorsGrid>
          {sponsors
            .filter(item => item.partner)
            .map(item => <Sponsor sponsor={item} />)
          }
        </SponsorsGrid>


        <!-- TODO: List supporters and backers -->
      </div>
    </section>
  </main>

  <Footer />

  
</Body>
</html>
