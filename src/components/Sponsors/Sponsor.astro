---
const { sponsor, small } = Astro.props;
const {link, name, logo} = sponsor;
---

<a href={link} class:list={["sponsor", {"is-small": small}]}>
  <img src={logo} alt={name} >
</a>

<style>
  .sponsor {
    display: flex;
    align-items: center;
    justify-items: center;

    min-height: 140px;
    padding: 1.5em 3em;
    border-radius: .35em;

    background-color: var(--theme-bg-offset);
    transition: .3s background;
  }

  .sponsor:hover, .sponsor:focus {
    background-color: var(--theme-text-lighter);
  }

  .sponsor img {
    width: 100%;
    max-width: 190px;
    height: auto;
    margin: 0 auto;
  }

  .sponsor.is-small {
    min-height: 100px;
  }
  .sponsor.is-small img {
    max-width: 150px;
  }

  :root.theme-dark .sponsor {
	  background-color: var(--theme-text-light);
  }

  :root.theme-dark .sponsor img {
	  filter: grayscale(1);
    transition: filter .4s;
  }
  :root.theme-dark .sponsor:hover img {
	  filter: grayscale(0);
  }
</style>